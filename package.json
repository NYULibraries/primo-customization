{
  "name": "primo-customization",
  "version": "0.0.1",
  "description": "NYU Primo Customization",
  "engines" : {
      "node" : ">=16.17.0"
  },
  "repository": "https://github.com/NYULibraries/primo-customization",
  "type": "module",
  "devDependencies": {
    "eslint": "^8.40.0"
  },
  "scripts": {
      "bookmarklet": "./scripts/create-bookmarklet.sh",
      "cdn:update:dev": "./scripts/update-cdn.sh cdn-dev",
      "cdn:update:sandbox": "./scripts/update-cdn.sh sandbox",
      "cdn-server": "node tools/cdn-server/server.mjs",
      "eslint": "node_modules/.bin/eslint --ignore-pattern custom/00_common/js/custom.js .eslintrc.cjs eslint.config.js custom/ scripts/ test/e2e/tests/ test/unit/ tools/",
      "eslint:cjs-file": "node ./scripts/write-eslintrc-cjs-file.js && node_modules/.bin/eslint --fix .eslintrc.cjs",
      "eslint:fix": "node_modules/.bin/eslint --fix --ignore-pattern custom/00_common/js/custom.js .eslintrc.cjs eslint.config.js custom/ scripts/ test/e2e/tests/ test/unit/ tools/",
      "generate-custom-directives": "node ./scripts/write-autogenerated-directives-files.js",
      "clean-view-custom": "scripts/clean-view-custom.sh",
      "primo-explore-devenv:app-css": "cd primo-explore-devenv && node_modules/.bin/gulp app-css --ve --view",
      "primo-explore-devenv:app-css:dev": "yarn primo-explore-devenv:app-css 01NYU_INST-NYU_DEV",
      "primo-explore-devenv:app-css:prod": "yarn primo-explore-devenv:app-css 01NYU_INST-NYU",
      "primo-explore-devenv:app-css:testws01": "yarn primo-explore-devenv:app-css 01NYU_INST-TESTWS01",
      "primo-explore-devenv:create-package": "cd primo-explore-devenv && node_modules/.bin/gulp create-package --view",
      "primo-explore-devenv:create-package:dev": "yarn primo-explore-devenv:create-package 01NYU_INST-NYU_DEV",
      "primo-explore-devenv:create-package:prod": "yarn primo-explore-devenv:create-package 01NYU_INST-NYU",
      "primo-explore-devenv:create-package:testws01": "yarn primo-explore-devenv:create-package 01NYU_INST-TESTWS01",
      "primo-explore-devenv:run": "cd primo-explore-devenv && node_modules/.bin/gulp run --ve --view",
      "primo-explore-devenv:run:dev": "yarn clean-view-custom 01NYU_INST-NYU_DEV && yarn primo-explore-devenv:run 01NYU_INST-NYU_DEV",
      "primo-explore-devenv:run:prod": "yarn clean-view-custom 01NYU_INST-NYU && yarn primo-explore-devenv:run 01NYU_INST-NYU",
      "primo-explore-devenv:run:testws01": "yarn clean-view-custom 01NYU_INST-TESTWS01 && yarn primo-explore-devenv:run 01NYU_INST-TESTWS01"
  }
}
