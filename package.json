{
  "name": "primo-customization",
  "version": "0.0.1",
  "description": "NYU Primo Customization",
  "engines" : {
      "node" : ">=16.17.0"
  },
  "repository": "https://github.com/NYULibraries/primo-customization",
  "type": "module",
  "devDependencies": {
    "eslint": "^8.40.0"
  },
  "scripts": {
      "bookmarklet": "./scripts/create-bookmarklet.sh",
      "cdn:update:dev": "./scripts/update-cdn.sh cdn-dev",
      "cdn:update:sandbox": "./scripts/update-cdn.sh sandbox",
      "cdn-server": "node tools/cdn-server/server.mjs",
      "eslint:cjs-file": "node ./scripts/write-eslintrc-cjs-file.js && node_modules/.bin/eslint --fix .eslintrc.cjs",
      "eslint:fix": "node_modules/.bin/eslint --fix .eslintrc.cjs eslint.config.js cdn/ custom/ scripts/ tools/",
      "generate-custom-directives": "node ./scripts/write-autogenerated-directives-files.js",
      "primo-explore-devenv:create-package:dev": "cd primo-explore-devenv && node_modules/.bin/gulp create-package --view 01NYU_INST-NYU_DEV",
      "primo-explore-devenv:create-package:prod": "cd primo-explore-devenv && node_modules/.bin/gulp create-package --view 01NYU_INST-NYU",
      "primo-explore-devenv:create-package:testws01": "cd primo-explore-devenv && node_modules/.bin/gulp create-package --view 01NYU_INST-TESTWS01",
      "primo-explore-devenv:run:dev": "cd primo-explore-devenv && node_modules/.bin/gulp run --view 01NYU_INST-NYU_DEV --ve",
      "primo-explore-devenv:run:prod": "cd primo-explore-devenv && node_modules/.bin/gulp run --view 01NYU_INST-NYU --ve",
      "primo-explore-devenv:run:testws01": "cd primo-explore-devenv && node_modules/.bin/gulp run --view 01NYU_INST-TESTWS01 --ve"
  }
}
